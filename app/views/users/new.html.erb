<h1>Sign Up!</h1>

<div>
  <%= form_for @user do |f| %>
    <div>
      <%= f.text_field :username, placeholder: "Username" %>
    </div>
    <br>

    <div>
      <%= f.text_field :email, placeholder: "Email" %>
    </div>
    <br>

    <div>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>
    <br>

  <%= f.submit "Sign Up" %>
<% end %>

<br>

 <h3><%= link_to "Login", "/login"%>


<h3><%= link_to('Login via Facebook', '/auth/facebook') %></h3>
