<h1>Login</h1>

<div>
  <%= form_tag login_path do %>
  <div>
    <%= text_field_tag :username, nil, placeholder: "Username" %>    
  </div>
  <br>

  <div> 
    <%= password_field_tag :password, nil,  placeholder: "Password" %>    
  </div>
  <br>

  <%= submit_tag "Login" %>
  <% end %>

<br>

<h3>Login with <%= link_to('Facebook', '/auth/facebook') %></h3>

<h3>No account? <%= link_to "Sign Up", new_user_path %></h3>


